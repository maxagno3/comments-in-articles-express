<link rel="stylesheet" href="/stylesheets/style.css">
<h3><%= article.title %></h3>
<p><%= article.description %></p>

<h2>Comments:</h2>
<% article.comments.forEach(c => { %>
    <p>Content: <%= c.content %></p>
    <p>Author: <%= c.author %></p>
    <a href="/comments/<%= c.id %>/edit">Edit</a>
    <a href="/comments/<%= c.id %>/delete">Delete</a>
<% }) %>

<form action="/articles/<%= article.id %>" method="POST">
    <input type="text" name="content" placeholder="Add comment..">
    <input type="text" name="author" placeholder="Add author...">
    <input type="submit" value="Comment">
</form>